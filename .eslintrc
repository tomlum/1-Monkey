{
	"extends": "airbnb",
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"jest": true
	},
	"rules": {
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
		"quotes": ["error", "double"],
		"comma-dangle": ["error", "never"],
		"no-plusplus": 0,
		"max-len": ["error", 100],
		"arrow-parens": [2, "as-needed"],
		"function-paren-newline": 0,
		"no-use-before-define": ["error", { "functions": false, "classes": false, "variables": false  }]
	}
}
